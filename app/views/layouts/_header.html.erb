<header class="navbar navbar-fixed-top navbar-default">
	<div class='container'>
	<%= link_to "Tralobo", root_path, class: "logo" %>
	<nav>
		<ul class="nav navbar-nav navbar-left">

			<li><%= link_to "Home", root_path, class: 'navlink' %></li>
			<li><%= link_to "Directory", directory_path, class: 'navlink' %></li>
			<li><%= link_to "Log Map", log_map_path, class: 'navlink' %></li>
			<% if logged_in? %>
				<li><%= link_to 'Log out', logout_path, method: 'delete', class: 'navlink' %></li>
				<li><%= link_to current_user[:username], current_user, class: 'navlink user-link' %></li>
			<% else %> 
				<li><%= link_to 'Log in', login_path, class: 'navlink' %> </li>
				<li><%= link_to 'Sign up', signup_path, class: 'navlink' %> </li>
			<% end %>
		</ul>
	</nav>
</div>
</header>